#cloud-config
# overwrite the fqdn set by metal3 wit the one generated by the baremetalset
fqdn: {{ .Hostname }}{{ if .DomainName }}.{{ .DomainName }}{{ end }}
users:
  - name: cloud-admin
    ssh-authorized-keys: {{ .AuthorizedKeys }}
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    shell: /bin/bash
{{- if .NodeRootPassword }}
chpasswd:
  list: |
    root:{{ .NodeRootPassword }}
  expire: False
{{- end }}
